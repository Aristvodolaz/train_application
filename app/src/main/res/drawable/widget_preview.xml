<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Фон виджета с градиентом -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#1A237E"
                android:centerColor="#01579B"
                android:endColor="#0288D1" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Белая капля воды в центре -->
    <item android:top="30dp" android:left="60dp" android:right="60dp" android:bottom="80dp">
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    
    <!-- Полоса прогресса -->
    <item android:top="90dp" android:left="20dp" android:right="20dp" android:height="12dp">
        <shape>
            <solid android:color="#B3FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Три кнопки внизу -->
    <item android:top="120dp" android:left="10dp" android:right="74dp" android:bottom="20dp">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#80D8FF"
                android:startColor="#039BE5" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <item android:top="120dp" android:left="74dp" android:right="74dp" android:bottom="20dp">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#80D8FF"
                android:startColor="#039BE5" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <item android:top="120dp" android:left="74dp" android:right="10dp" android:bottom="20dp">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#80D8FF"
                android:startColor="#039BE5" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list> 