<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Тень -->
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="#10000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="#20000000" />
            <corners android:radius="9dp" />
        </shape>
    </item>
    
    <!-- Фон кнопки -->
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#80D8FF"
                android:startColor="#039BE5" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#40FFFFFF" />
        </shape>
    </item>
</layer-list> 